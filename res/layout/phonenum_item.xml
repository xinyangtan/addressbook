<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageButton
            android:id="@+id/phonenum_item_msgButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phonenum_item_msg" />

        <ImageButton
            android:id="@+id/phonenum_item_callButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phonenum_item_call" />

        <ImageButton
            android:id="@+id/phonenum_item_addButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phonenum_item_add" />

        <ImageButton
            android:id="@+id/phonenum_item_delButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phonenum_item_del" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/phonenum_item_tipsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="手机"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/phonenum_item_phoneTV"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="无"
            android:ems="11"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>